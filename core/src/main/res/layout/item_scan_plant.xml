<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_scan"
    android:paddingHorizontal="15dp"
    android:paddingVertical="25dp"
    android:layout_marginBottom="20dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_plant"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy_img_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedItemScan" />

    <TextView
        android:id="@+id/namePlant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:text="@string/dummy_name_plant"
        android:textColor="@color/blackText"
        app:layout_constraintStart_toEndOf="@id/img_plant"
        app:layout_constraintTop_toTopOf="@id/img_plant" />

    <TextView
        android:id="@+id/scientificPlant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:fontFamily="@font/plus_jakarta_sans_medium"
        android:text="@string/dummy_scientific_plant"
        android:textColor="@color/textColorHint"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@id/namePlant"
        app:layout_constraintTop_toBottomOf="@id/namePlant" />
    
    <ImageView
        android:id="@+id/ic_detail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="7dp"
        android:background="@drawable/bg_arrow_right"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/img_plant"
        app:layout_constraintTop_toTopOf="@id/img_plant"/>

</androidx.constraintlayout.widget.ConstraintLayout>