<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="15dp"
    android:paddingVertical="20dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/bg_item_history_scan">

    <ImageView
        android:id="@+id/ic_scan"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_scan_green"
        android:background="@drawable/bg_icon_scan"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_scan_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:text="@string/scan_success"
        android:textColor="@color/blackText"
        app:layout_constraintStart_toEndOf="@id/ic_scan"
        app:layout_constraintTop_toTopOf="@id/ic_scan" />

    <TextView
        android:id="@+id/tv_date_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plus_jakarta_sans_medium"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:text="@string/dummy_date_scan"
        android:textColor="#D2D2D2"
        app:layout_constraintStart_toStartOf="@id/tv_scan_success"
        app:layout_constraintTop_toBottomOf="@id/tv_scan_success" />

    <TextView
        android:id="@+id/tv_id_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/plus_jakarta_sans_semibold"
        android:text="@string/dummy_id_scan"
        android:textSize="13sp"
        android:textColor="#D2D2D2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_scan_success" />

    <TextView
        android:id="@+id/tv_indicator_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:text="Sehat"
        android:textSize="12sp"
        android:textColor="@color/primary_color"
        app:layout_constraintEnd_toEndOf="@id/tv_id_scan"
        app:layout_constraintTop_toTopOf="@id/tv_date_scan" />

</androidx.constraintlayout.widget.ConstraintLayout>