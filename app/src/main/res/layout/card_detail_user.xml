<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="30dp"
    android:paddingHorizontal="35dp"
    android:background="@drawable/background_history_card">

    <ImageView
        android:id="@+id/ic_user"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/plus_jakarta_sans_semibold"
        android:textColor="@color/blackText"
        android:text="John Doe"
        app:layout_constraintBottom_toBottomOf="@id/ic_user"
        app:layout_constraintTop_toTopOf="@id/ic_user"
        app:layout_constraintStart_toEndOf="@+id/ic_user"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ic_user"/>

    <ImageView
        android:id="@+id/ic_email"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_email_black"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/plus_jakarta_sans_semibold"
        android:textColor="@color/blackText"
        android:text="johndoe@gmail.com"
        app:layout_constraintBottom_toBottomOf="@id/ic_email"
        app:layout_constraintTop_toTopOf="@id/ic_email"
        app:layout_constraintStart_toEndOf="@+id/ic_email"/>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ic_email"/>

    <ImageView
        android:id="@+id/ic_password"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_password_black"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/plus_jakarta_sans_semibold"
        android:textColor="@color/blackText"
        android:text="*************************"
        app:layout_constraintBottom_toBottomOf="@id/ic_password"
        app:layout_constraintTop_toTopOf="@id/ic_password"
        app:layout_constraintStart_toEndOf="@+id/ic_password"/>

</androidx.constraintlayout.widget.ConstraintLayout>