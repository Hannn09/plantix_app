<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp"
    android:background="@drawable/background_history_card"
    android:paddingTop="15dp"
    android:paddingBottom="25dp">
    
    <ImageView
        android:id="@+id/ic_scan"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="35dp"
        android:src="@drawable/ic_history_scan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/scan_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:textSize="16sp"
        android:text="Scan Berhasil"
        android:textColor="@color/blackText"
        app:layout_constraintStart_toEndOf="@id/ic_scan"/>

    <TextView
        android:id="@+id/timestamp_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plus_jakarta_sans_medium"
        android:textSize="12sp"
        android:text="Sabtu, 4 Maret 2024 Â· 12.43 PM"
        android:textColor="#B3303030"
        app:layout_constraintTop_toBottomOf="@id/scan_success"
        app:layout_constraintStart_toStartOf="@id/scan_success"/>


</androidx.constraintlayout.widget.ConstraintLayout>