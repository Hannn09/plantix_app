<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:id="@+id/card"
    app:cardBackgroundColor="@color/white"
    android:layout_marginHorizontal="30dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/plant"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/plant_dummy"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_plant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:text="Tanaman Pucuk Merah"
            android:textColor="@color/blackText"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/plant"
            app:layout_constraintTop_toTopOf="@id/plant" />

        <TextView
            android:id="@+id/created_plant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:text="Sabtu, 4 Maret 2024 Â· 12.43 PM"
            android:textColor="#B3303030"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/name_plant"
            app:layout_constraintTop_toBottomOf="@id/name_plant" />
        
        <ImageView
            android:id="@+id/ic_alarm"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_alarm"
            app:layout_constraintStart_toStartOf="@id/created_plant"
            app:layout_constraintTop_toBottomOf="@id/created_plant"/>

        <TextView
            android:id="@+id/age_plant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Bulan"
            android:fontFamily="@font/plus_jakarta_sans_regular"
            android:textSize="10sp"
            android:textColor="@color/blackText"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/ic_alarm"
            app:layout_constraintTop_toTopOf="@id/ic_alarm"
            app:layout_constraintBottom_toBottomOf="@id/ic_alarm"/>

        <TextView
            android:id="@+id/type_plant"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:textColor="#1F6E3F"
            android:textSize="10sp"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:text="Tidak Sehat"
            android:textAlignment="center"
            android:paddingVertical="5dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_category"
            app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintBottom_toBottomOf="@id/plant"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>