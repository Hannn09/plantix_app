<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    tools:context=".ui.scan.detail.overview.OverviewFragment">

    <include
        android:id="@+id/card_information"
        android:layout_width="0dp"
        android:layout_height="150dp"
        layout="@layout/information_plant"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/requirement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/plus_jakarta_sans_semibold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="@string/plant_requirement"
        app:layout_constraintStart_toStartOf="@id/card_information"
        app:layout_constraintTop_toBottomOf="@id/card_information"/>

    <include
        android:id="@+id/card_requirement_1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="20sp"
        layout="@layout/requirement_plant"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/requirement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <include
        android:id="@+id/card_requirement_2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        layout="@layout/requirement_plant"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/card_requirement_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <include
        android:id="@+id/card_requirement_3"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        layout="@layout/requirement_plant"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/card_requirement_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/disease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/plus_jakarta_sans_semibold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="@string/plant_disease"
        app:layout_constraintStart_toStartOf="@id/card_information"
        app:layout_constraintTop_toBottomOf="@id/card_requirement_3"/>


</androidx.constraintlayout.widget.ConstraintLayout>